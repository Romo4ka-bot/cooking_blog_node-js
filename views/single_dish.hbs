<div class="page" id="page">

    <section class="recipe">
        <div class="recipe__bg">
            <div class="recipe__bg-inner" style="background: white url('/images/singleRecipe/salad.webp') center no-repeat;
            background-size: cover;"></div>
        </div>
    </section>

    <section class="recipe__header">
        <h3>Автор блюда: {{dish.ownerId.first_name}} {{dish.ownerId.second_name}} ({{dish.ownerId.email}})</h3>
        <h3 class="date">Дата: {{dish.date}}</h3>

        <h2 class="recipe__name">
            {{dish.title}}
        </h2>

        <div class="recipe__about">
            {{dish.description}}
        </div>
    </section>

    <section class="recipe__ingredients">
        <h2 class="recipe__ingredients-title recipe__name">
            Ингредиенты
        </h2>
        <ul class="recipe__ingredients-inner">
            {{#each dish.ingredient}}
                <li class="recipe__ingredient">{{this}}</li>
            {{/each}}
        </ul>
    </section>

    <section class="recipe">
        <h2 class="recipe__title recipe__name">
            Рецепт
        </h2>
        <ul class="recipe__info recipe__ingredients-inner">
            <li class="recipe__step recipe__ingredient">{{dish.recipe}}</li>
        </ul>

        <form action="/dish/{{dish._id}}/delete" method="post">
            <input type="hidden" name="_csrf" value="{{ csrf }}">
            <div style="display: flex; justify-content: center">
                <button>Удалить блюдо</button>
            </div>
        </form>

        <div class="recipe__ready">
            Готово. Приятного аппетита!
        </div>
    </section>
</div>